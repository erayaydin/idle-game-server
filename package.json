{
  "name": "idle-game-server",
  "version": "0.1.0",
  "description": "Work in progress idle game server",
  "repository": "https://github.com/erayaydin/idle-game-server",
  "author": "Eray AydÄ±n",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 18.3 <19"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon --ext js,ts,json,env --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/main.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/main.js",
    "clean": "rimraf tsconfig*.tsbuildinfo dist",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@jest/globals": "^28.1.2",
    "@jest/types": "^28.1.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "nodemon": "^2.0.18",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
